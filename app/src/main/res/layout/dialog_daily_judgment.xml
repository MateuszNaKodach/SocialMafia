<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:padding="8dp"
    android:layout_height="match_parent"
    android:gravity="center">


    <TextView
        android:text="Zabijanie/ Sprawdzanie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dailyOutvoted"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gameTipFragment"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_height="320dp"
        android:gravity="center">

        <ImageView
            android:paddingEnd="16dp"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_gallows_longer"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player_name_votes"
                android:textAllCaps="false"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:id="@+id/firstPlayerNameAndVotes" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/who_want_kill"
                android:fontFamily="sans-serif-medium"
                android:textSize="10sp"
                android:layout_gravity="right"
                android:id="@+id/firstPlayerKillButton" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player_name_votes"
                android:textAllCaps="false"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:id="@+id/secondPlayerNameAndVotes" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/who_want_kill"
                android:fontFamily="sans-serif-medium"
                android:textSize="10sp"
                android:layout_gravity="right"
                android:id="@+id/secondPlayerKillButton" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player_name_votes"
                android:textAllCaps="false"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:id="@+id/thirdPlayerNameAndVotes" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/who_want_kill"
                android:fontFamily="sans-serif-medium"
                android:textSize="10sp"
                android:layout_gravity="right"
                android:id="@+id/thirdPlayerKillButton" />

        </LinearLayout>
    </LinearLayout>


    <View android:background="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width = "match_parent"
        android:layout_height="2dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_confirmDailyJudgment"
        android:layout_marginTop="8dp"
        android:text="@string/confirm"
        android:textAlignment="center" />



</LinearLayout>
</ScrollView>