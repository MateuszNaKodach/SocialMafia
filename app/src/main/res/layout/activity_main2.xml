<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffffff"
    tools:context="pl.nowakprojects.socialmafia.ui.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="161dp"
        android:id="@+id/theMafiaLogo"
        android:src="@drawable/logo_socialmafia"
        android:contentDescription="The logo of the mafia application." />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="5">


            <ImageButton
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:id="@+id/buttonStartNewGame"
                android:src="@drawable/icon_startgame2"
                android:clickable="true"
                android:layout_columnWeight="1"
                android:background="@null" />



        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLoadGame"
            android:src="@drawable/icon_loadgame"
            android:clickable="true"
            android:minHeight="150dp"
            android:minWidth="150dp"
            android:background="@null"
            android:layout_columnWeight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonAppPreferences"
            android:src="@drawable/icon_apppreferences"
            android:background="@null"
            android:clickable="true"
            android:minHeight="150dp"
            android:minWidth="150dp"
            android:layout_columnWeight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonGameRules"
            android:src="@drawable/icon_rulesofthegame"
            android:background="@null"
            android:clickable="true"
            android:minHeight="150dp"
            android:minWidth="150dp"
            android:layout_columnWeight="1" />

    </GridLayout>

    </ScrollView>

</LinearLayout>
