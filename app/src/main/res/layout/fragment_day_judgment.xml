<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="8dp">

    <TextView
        android:text="DAY JUDGMENT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        tools:text="@string/dayjudgment"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.DialogWindowTitle" />

    <View android:background="#000000"
        android:layout_width = "match_parent"
        android:layout_height="2dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icon_judgment"
        android:id="@+id/imageView2"
        android:padding="16dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:padding="8dp">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkingText"
            tools:text="@string/checking"
            android:layout_weight="0.1"
            android:gravity="right"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <SeekBar
            android:layout_height="wrap_content"
            android:id="@+id/checkingSlider"
            android:layout_width="match_parent" />

        <Space android:layout_columnSpan="2"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/killingText"
            tools:text="@string/killing"
            android:layout_weight="0.1"
            android:gravity="right"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_gravity="right" />

        <SeekBar
            android:layout_height="wrap_content"
            android:id="@+id/killingSlider"
            android:layout_width="match_parent" />

    </GridLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gameTipFragment"/>

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/confirmJudge"
        tools:text="@string/confirmVoting" />

