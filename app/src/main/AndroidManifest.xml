<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.nowakprojects.socialmafia">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:debuggable="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mainmenuoptions.newgame.PickPlayersAmountActivity"
            android:label="@string/title_activity_pick_players_amount"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.nowakprojects.socialmafia.MainActivity" />
        </activity>
        <activity
            android:name=".mainmenuoptions.gamerules.GameRulesActivity"
            android:label="@string/title_activity_game_rules"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.nowakprojects.socialmafia.MainActivity" />
        </activity>
        <activity
            android:name=".mainmenuoptions.newgame.TapPlayersNamesActivity"
            android:label="@string/title_activity_tap_players_names"
            android:parentActivityName=".mainmenuoptions.newgame.PickPlayersAmountActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.nowakprojects.socialmafia.mainmenuoptions.newgame.PickPlayersAmountActivity" />
        </activity>
        <activity
            android:name=".mainmenuoptions.newgame.SelectPlayerRolesActivity"
            android:label="@string/title_activity_select_player_roles"
            android:parentActivityName=".mainmenuoptions.newgame.TapPlayersNamesActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.nowakprojects.socialmafia.mainmenuoptions.newgame.TapPlayersNamesActivity" />
        </activity>
        <activity
            android:name=".mainmenuoptions.newgame.ConnectPlayersToRolesActivity"
            android:label="@string/title_activity_connect_players_to_roles"
            android:parentActivityName=".mainmenuoptions.newgame.SelectPlayerRolesActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.nowakprojects.socialmafia.mainmenuoptions.newgame.SelectPlayerRolesActivity" />
        </activity>
        <activity
            android:name=".mainmenuoptions.newgame.TheGameActionActivity"
            android:label="@string/title_activity_the_game_action"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>